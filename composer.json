{
    "name": "kissplugins/woo-coupon-debugger",
    "description": "A companion plugin for WooCommerce Smart Coupons to debug coupon application and hook/filter processing",
    "type": "wordpress-plugin",
    "license": "GPL-3.0+",
    "authors": [
        {
            "name": "KISS Plugins",
            "email": "devops@kissplugins.com",
            "homepage": "https://kissplugins.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6",
        "phpmd/phpmd": "^2.10"
    },
    "autoload": {
        "psr-4": {
            "KissPlugins\\WooCouponDebugger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KissPlugins\\WooCouponDebugger\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=8",
        "phpcs": "phpcs src --standard=WordPress",
        "phpmd": "phpmd src text cleancode,codesize,controversial,design,naming,unusedcode"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
